<div id="new-country" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New baseline data</h5>
            </div>
            <div class="modal-body">
                <h5>Choose existing country to copy from</h5>
                <select class="form-control" data-bind="options: countries,
                     optionsText: 'name', value: selectedCountry">
                </select>
                <div class="mt-3">
                    <h5>Enter a name for this new baseline data set</h5>
                    <input type="text" data-bind="value: newCountry().name"/>
                </div>
            </div>
            <div class="modal-footer">
                <div>
                    <button class="btn btn-primary rounded-0"
                            data-toggle="modal"
                            data-target="#new-country"
                            data-bind="click: addCountry">Save
                    </button>
                    <button class="btn btn-light rounded-0" data-toggle="modal" data-target="#new-country">Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>