<div id="new-country" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="mt-3">
                    <h5>Enter a name for this new baseline data set</h5>
                    <input type="text" data-bind="value: newCountry().name"/>
                </div>
            </div>
            <div class="modal-footer">
                <div>
                    <button class="btn btn-primary rounded-0"
                            data-toggle="modal"
                            data-target="#new-country"
                            data-bind="click: addCountry">Save
                    </button>
                    <button class="btn btn-light rounded-0" data-toggle="modal" data-target="#new-country">Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="choose-country" class="modal fade" role="dialog" data-bind="if: showScenarioSection">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="mt-3">
                    <h5>Enter a name for this new baseline data set</h5>
                    <input type="text" data-bind="value: newCountry().name"/>
                </div>
                <hr/>
                <div class="mt-3" data-bind="with: currentScenario">
                    <h5>Or use an existing region</h5>
                    <%- include('country-chooser') %>
                </div>
            </div>
            <div class="modal-footer">
                <div>
                    <button class="btn btn-primary rounded-0"
                            data-toggle="modal"
                            data-target="#choose-country"
                            data-bind="click: addCountry">Save
                    </button>
                    <button class="btn btn-light rounded-0" data-toggle="modal" data-target="#choose-country">Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>